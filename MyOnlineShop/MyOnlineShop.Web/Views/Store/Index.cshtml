@using System.Web.Handlers
@model IEnumerable<MyOnlineShop.Models.Category>

@{
    ViewBag.Title = "Index";
}
                     

                     
<h3>Our Categories</h3>
<p>
    Select from @Model.Count()
    categories:
</p>
<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <a href="#" onclick="location.href='@Url.Action("Browse","Store",new{category = category.Name})'"><img src="@category.CategoryImgUrl" alt="Alternate Text" style="min-height: 200px; max-width: 280px" /></a>
                
                <div class="caption">
                    <h3>@Html.ActionLink(category.Name, "Browse", new { category = category.Name })</h3>
                    <p>...</p>
                </div>
            </div>
        </div>
    }
</div>
